<% 
let activePage = typeof page !== 'undefined' ? page : ''; 
let content = `
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>${typeof heading !== 'undefined' ? heading : title}</h2>
        ${typeof actionButton !== 'undefined' ? actionButton : ''}
    </div>
    
    ${typeof error !== 'undefined' && error ? `
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle-fill"></i> ${error}
    </div>
    ` : ''}
    
    ${typeof success !== 'undefined' && success ? `
    <div class="alert alert-success">
        <i class="bi bi-check-circle-fill"></i> ${success}
    </div>
    ` : ''}
    
    ${typeof body !== 'undefined' ? body : ''}
</div>
`;
%>

<%- include('layout', { activePage: activePage, content: content }) %>